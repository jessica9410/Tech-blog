<div class="posts">
  {{#each posts }}
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>
        <a href="/post/{{id}}">{{title}}</a>
      </h2>
      <div>
                                        {{!-- format_date : Helper --}}
        Posted by {{User.username}} on {{format_date createdAt}}
      </div>
    </div>
    <div class="card-body">
      {{body}}
      {{#each Comments }}
      <div>
      {{body}}
      </div>
      <div>
        Comment by {{User.username}} on {{format_date createdAt}}
      </div>
      {{/each}}
      <div>Login to write comment</div>
    </div>
  </article>
  {{/each}}
</div>